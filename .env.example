# Directory for storing wallet files (used by Next.js API routes)
# If not set, the app tries '/mnt/data' and falls back to './data'.
DATA_DIR=/mnt/data

# Moralis (balances)
# Get API key: https://admin.moralis.io/ (Deep Index API)
MORALIS_API_KEY=
# Chain slug: eth | bsc | polygon | arbitrum | ...
MORALIS_CHAIN=bsc
# Optional override (defaults to https://deep-index.moralis.io/api/v2.2)
# MORALIS_API_BASE_URL=https://deep-index.moralis.io/api/v2.2

# Binance (prices)
# Optional override (defaults to https://api.binance.com)
# BINANCE_API_BASE_URL=https://api.binance.com

# Frontend: enable Binance-only mode for Markets (filter token list to those with Binance prices)
# NEXT_PUBLIC_BINANCE_ONLY=1

# Onchain RPC (required for actual swaps/signing)
# E.g. Infura/Alchemy/QuickNode URL compatible with ethers v6
CHAIN_ID=56
# RPC_PROVIDER_URL=https://bsc-dataseed.binance.org

# 1inch (swap) â€” for future swap integration
# ONEINCH_API_BASE_URL=https://api.1inch.dev
# ONEINCH_API_KEY=

# Integrator fee (1inch): set admin fee receiver and fee in basis points (bps)
# 1 bps = 0.01%. Example: 30 bps = 0.30%.
# When set, server will pass referrer+fee to 1inch quote/swap and the fee will be
# sent directly to this address in the destination token.
# FEE_RECIPIENT=0xYourAdminWallet
# INTEGRATOR_FEE_BPS=30

# Referral mapping (Plan A - off-chain payout): optional JSON map code -> wallet
# Used to attribute 30% credit to the ref wallet after a swap. Example:
# REF_CODE_MAP={"CODE30":"0xRefWalletAddressHere","INFLUENCER":"0xAnotherWallet"}

# Admin API token to protect referral admin endpoints
# ADMIN_API_TOKEN=changeme-strong-secret

# Admin signer for payouts (USE WITH CARE). Private key of admin wallet that holds received fees.
# ADMIN_PRIVATE_KEY=0x...

# Minimum payout threshold per (wallet, token) in wei to avoid dust payouts
# MIN_PAYOUT_WEI=0
